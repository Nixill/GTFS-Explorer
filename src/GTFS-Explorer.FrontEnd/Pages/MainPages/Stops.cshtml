                    }*@

                    <tr onclick="location.href = '@(Url.Page("/StopOptions/StopSummary"))'">
                        <td scope="row">
                            Stop Id here
                        </td>
                        <td scope="row">
                            Stop Name here
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <input type="text" placeholder="Search...">
            <label style="color: #A3CD3D">Direction</label>
            <button type="submit"
                    class="button">
                East
            </button>
            <button type="submit"
                    class="active">
                West
            </button>
        </div>
    </div>
    <form>
        <input type="file" class="hidden" id="selectfile"/>
        <label class="select-file" for="selectfile">Select New File</label>
    </form>
